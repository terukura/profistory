%div.row
  %div.col-md-4
    %h2= t('profistory.views.list_all.works')
    %ul.list-group
      - @works.each do |work|
        %li.list-group-item
          = work.date.strftime('%Y/%m/%d')
          %a{href:to("works/#{work.title_escaped}")}= work.title
    %p
      %a.more{href:to("works")}= t("profistory.views.list_all.more")
  %div.col-md-4
    %h2= t('profistory.views.list_all.users')
    %ul.list-group
      - @users.each do |user|
        %li.list-group-item
          %img{src:gravatar_icon(user, 15)}
          %a{href:to("users/#{user.name}")}= user.screen_name
    %p
      %a.more{href:to("users")}= t("profistory.views.list_all.more")
  %div.col-md-4
    %h2= t('profistory.views.list_all.tags')
    %ul.list-group
      - @tags.each do |tag|
        %li.list-group-item
          %span.glyphicon.glyphicon-tag
          %a{href:to("tags/#{tag[:name]}")} #{tag[:name]}
          %span.badge= tag[:count]
    %p
      %a.more{href:to("tags")}= t("profistory.views.list_all.more")
