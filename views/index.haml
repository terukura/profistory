%div.row.tilt
  %div.col-md-4
    %h2 Works
    %ul
      - @works.each do |work|
        %li
          %a{href:to("works/#{CGI.escape(work.title)}")}= work.title
          by
          %a{href:to("users/#{work.user.name}")}= work.user.screen_name
  %div.col-md-4
    %h2 Users
    %ul
      - @users.each do |user|
        %li
          %a{href:to("users/#{user.name}")}= user.screen_name
  %div.col-md-4
    %h2 Tags
    %ul.list-group
      - @tags.each do |tag|
        %li.list-group-item
          %span.glyphicon.glyphicon-tag
          %a{href:to("tags/#{tag[:name]}")} #{tag[:name]}
          %span.badge #{tag[:count]}
