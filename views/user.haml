%div.tilt
  %h1= @user.screen_name
  - if allowed_to_edit?(@user)
    %a{href:to("#{@user.name}/*/edit")} add work
    &nbsp;|&nbsp;
  %a{href:to("#{@user.name}.json")} get json
%div.row.tilt
  - @years.each do |year|
    %div.col-md-4
      %h2= year
      %ul
        - @works.each do |work|
          - if work.date.year == year
            %li
              #{work.date.strftime("%m/%d")}
              %a{href:to("#{@user.name}/#{CGI.escape(work.title)}"),alt:work.description}= work.title
