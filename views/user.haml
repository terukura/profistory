%div.tilt
	%h1= @user.screen_name
	- if allowed_to_edit?(@user)
		%a{href:"/#{@user.screen_name}/*/edit"} add work
		&nbsp;|&nbsp;
	%a{href:"/#{@user.screen_name}.json"} get json
%div.row.tilt
	- @years.each do |year|
		%div.col-md-4
			%h2= year
			%ul
				- @works.each do |work|
					- if work.date.year == year
						%li
							%a{href:"/#{@user.screen_name}/#{CGI.escape(work.title)}",alt:work.description}= work.title
