%div.tilt
  %h1= @user.screen_name
  %p
    %strong tags:
    = @user.tags.join(", ")
  - if allowed_to_edit?(@user)
    %a{href:to("works/*/edit")} add work
    &nbsp;|&nbsp;
  %a{href:to("users/#{@user.name}.json")} get json
%div.row.tilt
  - @years.each do |year|
    %div.col-md-4
      %h2= year
      %ul
        - @works.each do |work|
          - if work.date.year == year
            %li
              #{work.date.strftime("%m/%d")}
              %a{href:to("works/#{CGI.escape(work.title)}"),alt:work.description}= work.title
