%h2
  = "#{t('profistory.views.show_tag.tag')}:"
  %span.glyphicon.glyphicon-tag
  #{params[:name]}

%div.row
  %div.col-md-4
    %h2= t('profistory.views.show_tag.works')
    %ul
      - @works.each do |work|
        %li
          %a{href:to("works/#{work.title_escaped}")}= work.title
  %div.col-md-4
    %h2= t('profistory.views.show_tag.users')
    %ul
      - @users.each do |user|
        %li
          %a{href:to("users/#{user.name}")}= user.screen_name
