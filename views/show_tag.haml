%h2
  Everything tagged with:
  %span.glyphicon.glyphicon-tag
  #{params[:name]}

%div.row.tilt
  %div.col-md-4
    %h2 Works
    %ul
      - @works.each do |work|
        %li
          %a{href:to("works/#{work.title_escaped}")}= work.title
  %div.col-md-4
    %h2 Users
    %ul
      - @users.each do |user|
        %li
          %a{href:to("users/#{user.name}")}= user.screen_name
