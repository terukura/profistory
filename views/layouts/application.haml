!!! 5
%html
  %head
    %meta{charset: 'utf-8'}/
    %meta{name:"viewport",content:"width=device-width,initial-scale=1.0"}
    %title= title
    %script{src:"http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js",type:"text/javascript"}
    %script{src:"http://cdn.embed.ly/jquery.embedly-3.1.1.min.js",type:"text/javascript"}
    %link{rel:'stylesheet',href:'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'}
    :css
      a:link,a:visited,a:hover,a:active { color:blue }
      img { max-width: 100% }
      div { word-break: break-all }
      img.favicon {
        width: 1em;
        height: 1em;
        filter: grayscale(100%);
      }
  %body
    %div.container
      %p{style:"padding-top:1em;padding-bottom:0em"}
        %strong
          %a{href:to('/')}= Settings.title
          - if @user
            &nbsp;>&nbsp;
            %a{href:to("users/#{@user.name}")} #{@user.screen_name}
          - if @work
            &nbsp;>&nbsp;
            = @work.title
        %span{style:'float:right'}
          - if current_user
            %a{href:to("users/#{current_user.name}")}= t('profistory.views.layout.application.my_page')
            &nbsp;|&nbsp;
            %a{href:to("settings/edit")}= t('profistory.views.layout.application.settings')
            &nbsp;|&nbsp;
            %a{href:to('logout')}= t('profistory.views.layout.application.logout')
          - else
            %a{href:to("auth/#{Settings.auth.provider}")}= t('profistory.views.layout.application.login')
      %hr
      != yield
